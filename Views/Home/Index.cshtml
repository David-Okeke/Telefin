@model EarlyMan.Models.ViewModels.HomepageItems

<section class="showcase">

    <div id="promotions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#promotions" data-slide-to="0" class="active"></li>
            <li data-target="#promotions" data-slide-to="1"></li>
            <li data-target="#promotions" data-slide-to="2"></li>
            <li data-target="#promotions" data-slide-to="3"></li>
        </ol>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/assets/First_img/Availability.png"
                     class="d-block w-100"
                     alt="Image 1" />
            </div>
            @foreach (var item in Model.PromotionRepository.Promos)
            {
                <div class="carousel-item">
                    <a href="#">
                        <img src="/assets/Promotions/@string.Concat(item.Location,
                                                ".png")"
                             class="d-block w-100" alt="potatoes">
                    </a>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#promotions" role="button"
           data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#promotions" role="button"
           data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <br />
    <div class="container regularart">
        @Html.Partial("ProductShowcase")
    </div>
</section>