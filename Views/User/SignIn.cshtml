@model EarlyMan.Models.ViewModels.LoginModel
@{Layout = null;}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LoginStyleSheet.css" />
</head>
<body>
    <div>
        <div asp-validation-summary="All" class="text-danger text-center"></div>
        <div class="formbody">
            <form asp-action="SignIn" class="container" method="post">
                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                <h3>Sign In</h3>
                <div>
                    <div class="labelL">
                        <label asp-for="Email">
                            <b>Email</b>
                        </label>
                    </div>

                    <input asp-for="Email" type="text" name="Name"
                           placeholder="Enter Email" required />
                </div>
                <div>
                    <div class="labelL">
                        <label asp-for="Password">
                            <b>Password</b>
                        </label>
                    </div>

                    <input asp-for="Password" type="password" name="Password"
                           placeholder="Enter Password" required />
                </div>
                <button type="submit">Log In</button>
                <div id="coOfUse">
                    By continuing, you agree to Earlyman's
                    <a href="#">Conditions of Use</a>.
                </div>
            </form>
            <div>
                <p>New to Earlyman Inc.?</p>
                <a class="whitebutton" asp-controller="User"
                   asp-action="CreateAccount">Create Account</a>
            </div>
        </div>
    </div>
</body>
</html>