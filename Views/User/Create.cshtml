@model CreateAccountModel
@{ Layout = null;}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Create Account</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LoginStyleSheet.css" />
</head>
<body>
    <div asp-validation-summary="All" class="text-danger text-center"></div>
    <form asp-controller="User" asp-action="Create" method="post">
        <div class="formbody">
            <h3>Create Account</h3>
            <div class="form-group">
                <label asp-for="FirstName">Firstname :</label>
                <div> <input asp-for="FirstName" /></div>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Lastname :</label>
                <div> <input asp-for="LastName" /></div>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <div> <input asp-for="PhoneNumber" /></div>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress">Email :</label>
                <div> <input asp-for="EmailAddress" /></div>
            </div>

            <button class="whitebutton" type="submit">Create</button>
        </div>
    </form>
</body>
</html>