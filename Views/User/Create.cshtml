@model CreateModel
@{ Layout = null;}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Create Account</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LoginStyleSheet.css" />
</head>
<body>
    <div asp-validation-summary="All" class="text-danger text-center"></div>
    <form asp-controller="User" asp-action="Create" method="post">
        <div class="formbody">
            <h3>Create Account</h3>
            <div class="form-group">
                <label asp-for="UserName">Username :</label>
                <div> <input asp-for="UserName" /></div>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email :</label>
                <div> <input asp-for="Email" /></div>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password :</label>
                <div> <input id="password-1" asp-for="Password" /></div>
            </div>
            <div class="form-group">
                <label>Re-enter Password :</label>
                <div> <input id="password-2" /></div>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNo"></label>
                <div> <input asp-for="PhoneNo" /></div>
            </div>

            <button class="whitebutton" type="submit">Create</button>
        </div>
    </form>
</body>
</html>