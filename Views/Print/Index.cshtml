@model IEnumerable<Print>

<section class="showcase">

    <div class="container">
        <hr />

        <div>
            <h1>Toys</h1>

            <div id="carouselEX" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Product_Images/Castle.jpg" class="d-block w-100 h-75" alt="Image 1" />
                    </div>
                    @foreach (var item in Model)
                    {
                        <div class="carousel-item">
                            <img src="~/Product_Images/@string.Concat(item.Location,".jpg")" class="d-block w-100" alt="...">
                        </div>
                    }
                </div>
            </div>
        </div>
        <hr />
    </div>

    <div class="container">
        <hr />
        <h1>Artwork</h1>

        <p>
            <h2>
                Shop for artwork here.
            </h2>
        </p>
        <hr />
    </div>

    <div class="container">
        <hr />
        <h1>Services</h1>
        <div>
            <ul>
                <li style="list-style:none"><a href="#"></a></li>
            </ul>
        </div>
        <hr />
    </div>
</section>